@model CapaEntidades.EntRegistrarEntrada
@{
    ViewBag.Title = "RegistrarEntrada";
}

<h2>Registrar hora de entrada.</h2>

@using (Html.BeginForm("RegistrarEntrada", "Inicio", FormMethod.Post, new { @class = "", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div>@Html.ActionLink("Regresar al Inicio.", "Index")</div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @if (ViewBag.NoExiste != null)
        {
            <p class="text-danger">@ViewBag.NoExiste</p>
        }

        @if (ViewBag.EntradaRegistrada != null)
        {
            <p class="text-danger">@ViewBag.EntradaRegistrada</p>
        }

        <div class="form-group">
            @Html.LabelFor(m => m.IdUsuario, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">               
                @Html.TextBoxFor(m => m.IdUsuario, new { @type = "text", @class = "form-control", @Value = "" })
                @Html.ValidationMessageFor(m => m.IdUsuario, "", new { @class = "text-danger" })
            </div>
        </div>
       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aceptar" class="btn btn-primary" id="aceptar" />
            </div>
        </div>   

    </div>
}