@model IEnumerable<CapaEntidades.EntLista>
@{
    ViewBag.Title = "ListaUsuarios";
}

<h2>Lista de usuarios.</h2>

<p>@Html.ActionLink("Dar de alta un usuario.", "AltaUsuarios")</p>

<table class="table table-hover">
    <tr>
        <th>@Html.DisplayNameFor(m => m.IdUsuario)</th>
        @*<th>@Html.DisplayNameFor(m => m.Nombre)</th>
        <th>@Html.DisplayNameFor(m => m.APaterno)</th>
        <th>@Html.DisplayNameFor(m => m.AMaterno)</th>*@
        <th>@Html.DisplayNameFor(m => m.FullName)</th>
        <th>@Html.DisplayNameFor(m => m.Correo)</th>
        @*<th>@Html.DisplayNameFor(m => m.Contrasena)</th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.IdUsuario)</td>
            @*<td>@Html.DisplayFor(modelItem => item.Nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.APaterno)</td>
            <td>@Html.DisplayFor(modelItem => item.AMaterno)</td>*@
            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
            <td>@Html.DisplayFor(modelItem => item.Correo)</td>
            @*<td>@Html.DisplayFor(modelItem => item.Contrasena)</td>*@
            <td>
                @Html.ActionLink("Actualizar", "ActualizarUsuario", new { id = item.IdUsuario }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.IdUsuario }) |*@
                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdUsuario }, new { onclick = "return confirm('Estas seguro que quieres eliminar este usuario?');" })
            </td>
        </tr>
    }
</table>