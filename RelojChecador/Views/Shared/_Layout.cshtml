<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Reloj Checador</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Reloj Checador", "Index", "Inicio", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["Nombre"] != null)
                    {
                        <li><p class="navbar-text">Hola <strong>[ @Session["Nombre"].ToString() ]</strong></p></li>
                    }
                    <li>@Html.ActionLink("Registrar entrada", "RegistrarEntrada", "Inicio")</li>
                    <li>@Html.ActionLink("Registrar salida", "RegistrarSalida", "Inicio")</li>
                    <li>@Html.ActionLink("Reporte de asistencia", "ReporteAsistencia", "Inicio")</li>
                    <li>@Html.ActionLink("Alta de usuarios", "AltaUsuarios", "Inicio")</li>
                    <li>@Html.ActionLink("Lista de usuarios", "ListaUsuarios", "Inicio")</li>
                    <li>@Html.ActionLink("Cerrar Sesión", "CerrarSesion", "Inicio")</li>
                    @*<li>@Html.ActionLink("Iniciar sesion", "Login", "Inicio")</li>*@
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>